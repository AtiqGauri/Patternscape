{
  "name": "PasswordTool",
  "productName": "Password Tool",
  "version": "1.0.0",
  "description": "App to detect patterns in passwords",
  "main": "source/main.js",
  "scriptsComments": {
    "preinstall": "first install cpy package, then use it to copy updated C++ files in addon folder, then compile addon",
    "postinstall": "first copy addon files into app source folder then install electron builder deps",
    "start": "start the app",
    "pack": "package app at given location",
    "dist": "operations before dist creation and then package app"
  },
  "scripts": {
    "preinstall": "(npm install cpy@^8.0.1 --save-dev && node ../Tests_and_assets/project_operations/preInstall.js && npm install ../PasswordTool_Native_Addon --no-save)",
    "postinstall": "(node ../Tests_and_assets/project_operations/postInstall.js && install-app-deps)",
    "start": "electron ./",
    "pack": "electron-builder --dir",
    "dist": "(node ../Tests_and_assets/project_operations/beforeNpmDist.js && electron-builder)"
  },
  "build": {
    "appId": "com.atiqgauri",
    "files": [
      "source/**/*"
    ],
    "extraFiles": [
      "data/Database/Error Log",
      "data/Input/Error Log",
      "data/Input/sample_input.txt",
      "data/Output/Error Log",
      "data/Stats/Error Log",
      "data/Stats/Patterns Data/Error Log",
      "data/Temp/Error Log"
    ],
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "highestAvailable",
      "icon": "source/assets/icons/app-icon.png"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "source/assets/icons/app-icon.png",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "linux": {
      "category": "Development",
      "desktop": {
        "Comment": "App to detect patterns in passwords",
        "Name": "Password Tool",
        "StartupNotify": "true",
        "Terminal": "false",
        "Type": "Application",
        "Categories": "Development;"
      },
      "executableName": "PasswordTool",
      "maintainer": "gauriatiq@gmail.com",
      "target": [
        "AppImage"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true
    }
  },
  "keywords": [
    "Password tool",
    "Password",
    "Pattern",
    "Security",
    "Attack"
  ],
  "repository": "https://github.com/AtiqGauri/PasswordTool.git",
  "author": {
    "name": "Atiq Gauri",
    "email": "gauriatiq@gmail.com"
  },
  "devDependencies": {
    "cpy": "^8.0.1",
    "electron": "^8.0.2",
    "electron-builder": "^22.3.2"
  },
  "dependencies": {
    "dexie": "^2.0.4",
    "dexie-export-import": "^1.0.0-rc.1",
    "n-readlines": "^1.0.0",
    "stream-to-blob": "^2.0.0",
    "sweetalert2": "^9.8.2"
  }
}
